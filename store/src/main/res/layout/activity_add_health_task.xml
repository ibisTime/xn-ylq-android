<?xml version="1.0" encoding="utf-8"?>
<layout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/img_title"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View style="@style/split_line_5"/>


    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:text="提醒时间"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:background="@drawable/bg_line_gray_no_corners"
        android:id="@+id/tv_select_time"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="选择时间"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <View  android:layout_marginTop="15dp" style="@style/split_line_5"/>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:text="提醒周期"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:weightSum="7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/ck_week_7"
            android:gravity="center"
            android:textColor="@drawable/tab_txtcolor"
            android:textSize="13sp"
            android:layout_weight="1"
            android:button="@null"
            android:background="@null"
            android:text="周日"
            android:layout_width="0dp"
            android:layout_height="45dp" />

       <CheckBox
           android:id="@+id/ck_week_1"
           android:gravity="center"
           android:textColor="@drawable/tab_txtcolor"
           android:textSize="13sp"
           android:layout_weight="1"
           android:button="@null"
           android:background="@null"
           android:text="周一"
           android:layout_width="0dp"
           android:layout_height="45dp" />

        <CheckBox
            android:id="@+id/ck_week_2"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:gravity="center"
            android:text="周二"
            android:textColor="@drawable/tab_txtcolor"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/ck_week_3"
           android:gravity="center"
           android:textColor="@drawable/tab_txtcolor"
           android:textSize="13sp"
           android:layout_weight="1"
           android:button="@null"
           android:background="@null"
           android:text="周三"
           android:layout_width="0dp"
           android:layout_height="45dp" />

        <CheckBox
            android:id="@+id/ck_week_4"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:gravity="center"
            android:text="周四"
            android:textColor="@drawable/tab_txtcolor"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/ck_week_5"
           android:gravity="center"
           android:textColor="@drawable/tab_txtcolor"
           android:textSize="13sp"
           android:layout_weight="1"
           android:button="@null"
           android:background="@null"
           android:text="周五"
           android:layout_width="0dp"
           android:layout_height="45dp" />
       <CheckBox
           android:id="@+id/ck_week_6"
           android:gravity="center"
           android:textColor="@drawable/tab_txtcolor"
           android:textSize="13sp"
           android:layout_weight="1"
           android:button="@null"
           android:background="@null"
           android:text="周六"
           android:layout_width="0dp"
           android:layout_height="45dp" />


    </LinearLayout>

    
    <View
        android:background="@color/gray"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>


</LinearLayout>

</layout>