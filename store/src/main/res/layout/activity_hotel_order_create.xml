<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/gray"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginBottom="15dp"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/text_gray2"
            android:text="酒店名称"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_hotel_name"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/text_color"
            tools:text="香格里似的发射点发射点大师傅士大夫拉酒店"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginBottom="15dp"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/text_gray2"
            android:text="酒店地址"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_hotel_address"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/text_color"
            tools:text="香格里似的发射点发射点大师傅士大夫拉酒店"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        style="@style/style_split_line"/>

    <View
        style="@style/split_line_10"/>

    <View
        style="@style/style_split_line"/>

     <LinearLayout
         android:background="@color/white"
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         
          <ImageView
              android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp"
              android:scaleType="fitXY"
              android:id="@+id/img_hotel_info"
              tools:src="@mipmap/icon"
              android:layout_marginLeft="10dp"
              android:layout_width="95dp"
              android:layout_height="90dp" />

         <LinearLayout
             android:layout_marginRight="15dp"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="15dp"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <TextView
                android:id="@+id/tv_hotel_size"
                 tools:text="标准单人间"
                 android:textColor="@color/text_color"
                 android:textSize="16sp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />

             <TextView
                 android:id="@+id/tv_hotel_data"
                 android:lineSpacingExtra="5dp"
                 android:layout_marginTop="10dp"
                 tools:text="标准单人间标准单人间标准单人间标准单人间标准单人间"
                 android:textColor="@color/text_gray"
                 android:textSize="16sp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />


             <TextView
                 android:id="@+id/tv_hotel_info"
                 android:lineSpacingExtra="5dp"
                 android:layout_marginTop="5dp"
                 tools:text="标准单人间标准单人间标准单人间标准单人间标准单人间"
                 android:textColor="@color/text_gray"
                 android:textSize="16sp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />


         </LinearLayout>


     </LinearLayout>

    <View
        style="@style/style_split_line"/>

    <View
        style="@style/split_line_10"/>

    <View
        style="@style/style_split_line"/>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginBottom="15dp"
            android:textColor="@color/text_gray2"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            android:text="房间数"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_hotel_num"
            android:textColor="@color/text_color"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginBottom="15dp"
            android:textColor="@color/text_gray2"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            android:text="入住人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_hotel_check_name"
            android:background="@null"
            android:textColor="@color/text_color"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            android:textSize="16sp"
            android:hint="请输入入住人姓名"
            android:textColorHint="@color/text_hint_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginBottom="15dp"
            android:textColor="@color/text_gray2"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            android:text="手机号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_hotel_check_phone"
            android:background="@null"
            android:textColor="@color/text_color"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            android:textSize="16sp"
            android:hint="用于接收通知"
            android:textColorHint="@color/text_hint_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        style="@style/style_split_line"/>

    <View
        style="@style/split_line_10"/>

    <View
        style="@style/style_split_line"/>

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_hotel_sp"
                android:textColor="@color/text_color"
                android:paddingTop="10dp"
                android:gravity="top"
                android:textColorHint="@color/text_hint_color"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:hint="有什么特殊要求，写在这里"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="150dp" />
        </LinearLayout>


    <View
        style="@style/style_split_line"/>

</LinearLayout>
</ScrollView>

    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="49dp">

        <TextView
            android:textSize="12sp"
            android:text="合计: "
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_finallyPrice"
            android:textSize="14sp"
            android:text="@string/price_sing"
            android:textColor="@color/orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_discountMoney"
            android:textSize="16sp"
            android:textColor="@color/red"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_pay"
            android:text="确认买单"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@color/orange"
            android:textColor="@color/white"
            android:layout_width="120dp"
            android:layout_height="match_parent" />

    </LinearLayout>
</LinearLayout>
</layout>