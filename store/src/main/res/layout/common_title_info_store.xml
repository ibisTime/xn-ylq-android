<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <FrameLayout
        android:id="@+id/fram_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/activity_title_bg">

        <TextView
            android:id="@+id/tv_top_title_abs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="title"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <FrameLayout
            android:visibility="gone"
           android:paddingLeft="15dp"
            android:id="@+id/fram_img_back_store"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
        >

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_back"
                android:layout_width="13dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/back_img" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_back"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                tools:text="返回"
                android:textSize="16sp"
        />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fllayout_right"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_gravity="right|center_vertical"
            >

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_right"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="15dp"
                android:src="@mipmap/ic_launcher" />


            <TextView
                android:textSize="16sp"
                android:visibility="gone"
                android:id="@+id/tv_top_right"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="客服"
                />

        </FrameLayout>


        <!--<View
            style="@style/hline"
            android:layout_gravity="bottom" />-->
    </FrameLayout>
</layout>
