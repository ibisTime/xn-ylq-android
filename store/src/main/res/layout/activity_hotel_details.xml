<?xml version="1.0" encoding="utf-8"?>
<layout >
    <LinearLayout
        android:background="@color/white"
        xmlns:banner="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


 <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


 <com.youth.banner.Banner
     banner:delay_time="4000"
     banner:indicator_drawable_selected="@drawable/banner_select"
     banner:indicator_drawable_unselected="@drawable/banner_un_select"
     banner:indicator_width="8dp"
     banner:indicator_height="8dp"
     banner:indicator_margin="5dp"
     android:id="@+id/banner_store_detail"
    android:layout_width="match_parent"
    android:layout_height="@dimen/banner_height">

 </com.youth.banner.Banner>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/tv_store_name"
            android:textSize="16sp"
            android:ellipsize="end"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/starBar"
            android:layout_width="80dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_dz"
                android:src="@mipmap/good_hand_un"
                android:layout_width="15dp"
                android:layout_height="15dp" />

            <TextView
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginLeft="25dp"
                android:id="@+id/tv_dzsum"
                android:src="@mipmap/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  />
        </FrameLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/tv_description"
        android:layout_marginBottom="15dp"
        android:ellipsize="end"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        style="@style/hline"
       />
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/layout_address"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/location" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    tools:text="xffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_call_phone"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/call" />

                <TextView
                    android:id="@+id/tv_phone_number"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    tools:text="xffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>


        <Button
           android:visibility="gone"
            android:id="@+id/btn_pay"
            android:background="@color/orange"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginRight="15dp"
            android:layout_gravity="right|center_vertical"
            android:textColor="@color/white"
            android:text="买单"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

<View
    android:layout_marginTop="10dp"
    android:background="@color/gray"
    android:layout_width="match_parent"
    android:layout_height="10dp"/>

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="图文详情"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginTop="15dp"
        style="@style/hline"
        />


    <TextView
        android:id="@+id/tv_txtdescription"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        tools:text="图文详情"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>

</ScrollView>

        <Button
            android:id="@+id/btn_book_hotel"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="我要入住"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@color/orange"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

</LinearLayout>
</layout>
