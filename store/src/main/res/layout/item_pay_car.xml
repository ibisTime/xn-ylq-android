<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_pay_car"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/img_select"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            tools:src="@mipmap/un_select" />

        <ImageView
            android:id="@+id/img_good"
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            tools:src="@mipmap/icon" />


        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img_good"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                tools:text="sdfsdf" />


            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="13dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/fontColor_orange"
                android:textSize="14sp"
                tools:text="ï¿¥100398.00" />

            <TextView
                android:paddingLeft="1dp"
                android:id="@+id/tv_num_info"
                android:layout_marginTop="5dp"
                android:text="x 0"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/fontColor_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <View
     android:layout_marginTop="10dp"
      style="@style/style_split_line"/>
    
    <LinearLayout
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:layout_marginRight="25dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_subtract"
                android:text="-"
                android:gravity="center"
                android:textColor="@color/fontColor_gray"
                android:background="@drawable/border_number"
                android:layout_marginLeft="19dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:text="0"
                android:id="@+id/txt_number"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/fontColor_gray"
                android:layout_marginLeft="35dp"
                android:layout_width="35dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_add"
                android:text="+"
                android:gravity="center"
                android:textColor="@color/fontColor_gray"
                android:background="@drawable/border_number"
                android:layout_marginLeft="35dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_marginRight="10dp"
            android:id="@+id/layout_delete"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginRight="10dp"
                android:background="@mipmap/delete"
                android:layout_width="15dp"
                android:layout_height="15dp" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>